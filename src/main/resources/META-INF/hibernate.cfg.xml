<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    <!-- CONNEXION A LA BASE DE DONNEES AVEC LE DRIVER MYSQL  -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1/easygeek</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
       
       <!-- MAPPING DES CLASSES JAVA POUR CHAQUE TABLE EN BASE DE DONNEES -->
        <mapping class="com.easygeek.classes.Client"/>
        <mapping class="com.easygeek.classes.Commande"/>
        <mapping class="com.easygeek.classes.Composant"/>
        <mapping class="com.easygeek.classes.ComposantFournisseur"/>
        <mapping class="com.easygeek.classes.ComposantFournisseurId"/>
        <mapping class="com.easygeek.classes.Fournisseur"/>
        <mapping class="com.easygeek.classes.Marque"/>
        <mapping class="com.easygeek.classes.Ordinateur"/>
        <mapping class="com.easygeek.classes.OrdinateurId"/>
        <mapping class="com.easygeek.classes.Stock"/>
        <mapping class="com.easygeek.classes.Type"/>
        <mapping class="com.easygeek.classes.TypeLivraison"/>
    </session-factory>
</hibernate-configuration>